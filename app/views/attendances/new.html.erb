<div class="text-center py-5">

  <div class="container py-5">
    <div class="col-md-5 offset-md-3">
      <div class="card" style="width: 30rem;">
        <div class="card-body">

          <%= form_tag url_for(controller: "attendances", action: "create") do %>
          <article>
            <% if flash[:error].present? %>/
            <div id="error_explanation">
              <p><%= flash[:error] %></p>
            </div>
            <% end %>
            <label class="amount">
              <h4>Registration fees</h4>
              <h6 class="card-subtitle mb-2 text-muted">You need to pay $<%= @amount/100 %> in order to participate.</h6> 
              <p>Click on the payment button bellow. The profits will go to the startup nation. No compromise.</p>
              </label>
            </article>

            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Registration fees"
            data-amount="<%= @amount.to_i %>"
            data-locale="auto"></script>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
