<div class="album py-5 bg-light">
	<div class="container">
		<h5>All the attendees for <%= @event.title %> at <%= @event.location %></h5>
		<p>The more, the better.</p> 
		<div class="row">
			<% @attendance.each do |a| %>
			<div class="col-md-4">
				<div class="card mb-3 shadow-sm">
					<div class="d-flex w-100 justify-content-between">
						<div class="card-body">
							<h6 class="mb-1"><%= User.find(a.participant_id).first_name %> <%= User.find(a.participant_id).last_name %></h6>
							<p class="mb-1"><%= User.find(a.participant_id).email %></p>
						</div>
											<div class="col-md-6 p-5">
						<% if User.find(a.participant_id).avatar.attached? %>
						<%= image_tag User.find(a.participant_id).avatar, alt: 'avatar', class: "avatar-min" %>
						<% else %>
						<%= image_tag "#{rand(1..3)}.jpeg", alt: 'avatar', class: "avatar-min" %>
						<% end %>
					</div>
					</div>

				</div>
			</div>
			<% end %>

		</div>

	</div>

</div>

