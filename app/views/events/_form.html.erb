<h2>Create a new event</h2><br>
<div class="container">
	<div class="row">
		<% if is_validated(current_user) %>
		<div class="col-md-6 offset-md-3">
			<%= form_tag events_path, method: :post, multipart: true do%>
			<div class="form-group">
				<%= text_field_tag 'start_date', nil, class: 'form-control text-center', placeholder: 'Start-date (YYYY-MM-DD)' %>
			</div><br />

			<div class="form-group">
				<%= text_field_tag 'duration', nil, class: 'form-control text-center', placeholder: 'Duration (in minutes)'  %>
			</div><br />

			<div class="form-group">
				<%= text_field_tag 'title', nil, class: 'form-control text-center', placeholder: 'Title'  %>
			</div><br />		

			<div class="form-group">

				<%= text_area_tag 'description', nil, class: 'form-control text-center', placeholder: 'Description (20 characters min)' %>
			</div><br />			

			<div class="form-group">

				<%= text_field_tag 'price', nil, class: 'form-control text-center', placeholder: 'Price (USD)' %>
			</div><br />

			<div class="form-group">

				<%= text_field_tag 'location', nil, class: 'form-control text-center', placeholder: 'Location' %>
			</div><br />

			<div class="form-group">
				<p><b><%= label_tag 'Image' %></b> &nbsp; <%= file_field_tag :event_picture %></p>
			</div><br />

			<%= submit_tag "Create", :class => 'btn btn-secondary' %>

			<% end %>
			<% else %>
			<p class="container">Pending validation of your account...</p>
			<% end %>
		</div>
	</div>
</div>