<div class="album py-5 bg-light">
	<div class="container">
		<h5>Manage your events</h5><br>
		<div class="row">
			<% @event.each do |e| %>
			<div class="col-md-4">
				<div class="card mb-3 shadow-sm">
					<div class="d-flex w-100 justify-content-between">
						<div class="card-body">
							<h6 class="mb-1"><%= e.title %></h6>
							<p class="mb-1"><%= e.admin.first_name %> <%= e.admin.last_name %></p>
							<p class="mb-1"><small>at <%= e.location %></small></p><br>
							<div class="d-flex justify-content-between align-items-center">
								<div class="btn-group">
									<%= link_to 'Info', event_path(e.id), :class => "btn btn-sm btn-outline-info" %>
									<%= link_to 'Edit', edit_event_path(e.id), :class => "btn btn-sm btn-outline-secondary" %>							
									<%= link_to 'Delete', event_path(e.id), :class => "btn btn-sm btn-outline-danger", :confirm => "You are about to delete this event. Are you sure?", method: :delete %>						
								</div>
								<small class="text-muted">Start date: <%= e.start_date.strftime("%Y-%m-%d") %></small>
							</div>
						</div>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>

