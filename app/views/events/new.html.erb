<div class="text-center">
	<h1>Create a new event</h1>

	<p>
		<%= form_tag events_path, method: :post do %>

		<%= label_tag 'Start date' %> <br />
		<%= text_field_tag 'start_date' %>
		<br /> <br />

		<%= label_tag 'Duration' %> <br />
		<%= text_field_tag 'duration' %>
		<br /> <br />

		<%= label_tag 'Title' %> <br />
		<%= text_field_tag 'title' %>
		<br /> <br />		

		<%= label_tag 'Description' %> <br />
		<%= text_area_tag 'description' %>
		<br /> <br />			

		<%= label_tag 'Price' %> <br />
		<%= text_field_tag 'price' %>
		<br /> <br />

		<%= label_tag 'Location' %> <br />
		<%= text_field_tag 'location' %>
		<br /> <br />

		<%= submit_tag "Create", :class => 'btn-primary' %>

		<% end %>
	</p>
</div>