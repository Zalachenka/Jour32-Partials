<div class="text-center py-5">

  <h2>Sign up</h2><br>

  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control text-center", placeholder: "email@email.com" %>
        </div><br>
        <div class="field form-group">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control text-center", placeholder: "First name"  %>
        </div><br>
        <div class="field form-group">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control text-center", placeholder: "Last name"  %>
        </div><br>
        <div class="field form-group">
          <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control text-center", placeholder: "Password (#{@minimum_password_length} characters minimum)"  %>
          <% else %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control text-center", placeholder: "Password"  %>
          <% end %>
        </div><br>

        <div class="field form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control text-center", placeholder: "Password confirmation"   %>
        </div><br>

        <div class="actions">
          <%= f.submit "Sign up", :class => "btn btn-secondary" %>
        </div><br>
        <% end %>

        Already registred? <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
