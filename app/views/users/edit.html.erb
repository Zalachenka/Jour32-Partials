<div class="text-center py-5">
		<h2>Edit your user</h2><br>
	<div class="container">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<%= form_for @user do |f| %>

				<div class="field form-group">
					<%= f.label :email %><br />
					<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control text-center"%>
				</div><br>

				<div class="field">
					<%= f.label "first name" %><br />
					<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control text-center" %>
				</div><br>

				<div class="field">
					<%= f.label "last name" %><br />
					<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control text-center" %>
				</div><br>

				<div class="field">
					<%= f.label "description" %><br />
					<%= f.text_field :description, autofocus: true, autocomplete: "last_name", class: "form-control text-center" %>
				</div><br>

				<div class="actions">
					<%= f.submit "Update", class: "btn btn-secondary" %>
				</div><br>
				<% end %>
			</div>
		</div>
	</div>
</div>